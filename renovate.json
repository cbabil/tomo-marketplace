{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "description": "Automatically update Docker image versions in app definitions",
  "enabledManagers": ["regex"],
  "regexManagers": [
    {
      "fileMatch": ["^apps/.*/app\\.yaml$"],
      "matchStrings": [
        "image:\\s*(?<depName>[a-z0-9._/-]+):(?<currentValue>[a-z0-9._-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchFileNames": ["apps/**/app.yaml"],
      "groupName": "docker-images",
      "groupSlug": "docker-images",
      "schedule": ["before 6am on monday"],
      "automerge": false,
      "labels": ["dependencies", "docker"],
      "commitMessagePrefix": "chore(deps):",
      "prTitle": "chore(deps): update Docker images"
    },
    {
      "matchPackagePatterns": ["*"],
      "excludePackagePatterns": [".*alpha.*", ".*beta.*", ".*rc.*"],
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "docker", "major"],
      "automerge": false
    }
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}
